<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <!--HEADER--> <%- include('../partials/header') %> 
        <main class="container-fluid">
            <!--Listado de nuestros productos-->
            <br>
            <section class="container-fluid">
              <h1 class="titulo" >Todos los productos</h1>
            </section>
            <section class="productos">
                <% for(let i= 0; i < productos.length; i++){ %>
            
                    <article class="producto">
                      <figure class="imagenProducto" >
                        <img  src="images/products/<%= productos[i].imagen%> " class="card-img-top w-100 d-block" >
                      </figure>
                    
                      <section class="detalle">
                        <h5 class="card-title"><%= productos[i].product%></h5>
                        <h5 class="card-title"><%= productos[i].brand%></h5>
                        <h5 class="card-title" >$  <%= productos[i].price%> </h5>
                        <p class="card-text descripcion"><%= productos[i].comentarios%> </p>
        
                      </section>
                  
                    </article>        
                  
                <% } %>
    </main>
    <!-- FOOTER --> <%- include('../partials/footer') %> 
 </body>
 </html>