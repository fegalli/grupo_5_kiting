<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <!--HEADER--> <%- include('../partials/header') %> 
    <main>
    <section class="productos">
        <% for(let i= 0; i < productos.length; i++){ %> 
            <article class="articulo">
                <section class="content">
                    <figure class="imagenProducto" >
                        <img  src='/img/carve-main.png'>
                    </figure>
                    <section class="detalle">
                        <h4 class="card-title">Name: <%= productos[i].name%></h4>
                        <h4 class="card-title" >Price($): <%= productos[i].price%> </h4>
                        <h5 class="card-title" >Style: <%= productos[i].style%> </h5>
                        <h5 class="card-title" >Brand: <%= productos[i].brand%> </h5>
                        <h5 class="card-title" >Size: <%= productos[i].size%> </h5>      
                        <h5 class="card-title" >Color: <%= productos[i].color%> </h5>  
                        <p class="card-text descripcion">Comments: <%= productos[i].comentarios%> </p>
                    </section>
                </section>
                <section class="botones">
                     <button><a href= "/admin/edit/<%= productos[i].id%>" >Editar</a></button>
                     <button><a href= "/admin/delete/<%= productos[i].id%>" >Eliminar</a></button>
                 </section>
            </article>
        <% } %>
    </section>
    </main>
   <!-- FOOTER --> <%- include('../partials/footer') %> 
</body>
</html>
